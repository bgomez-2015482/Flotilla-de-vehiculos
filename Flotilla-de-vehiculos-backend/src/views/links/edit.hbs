<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{vehicle.codigovehiculo}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{vehicle.marca}}" class="form-control" name="marca" placeholder="Marca" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.modelo}}" name="modelo" class="form-control" placeholder="Modelo">
                        </div>
                        <div class="form-group">
                            <input type="number" value="{{vehicle.año}}" name="año" class="form-control" placeholder="Año">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.placa}}" name="placa" class="form-control" placeholder="Placa">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{vehicle.estado}}" name="estado" class="form-control" placeholder="Estado">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                        <div class="form-group">
                            <a href="/links" type="button" class="btn btn-danger btn-block">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>