<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="marca" placeholder="Marca" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="modelo" class="form-control" placeholder="Modelo">
                        </div>
                        <div class="form-group">
                            <input type="number" name="año" class="form-control" placeholder="Año">
                        </div>
                        <div class="form-group">
                            <input type="text" name="placa" class="form-control" placeholder="Placa">
                        </div>
                            <div class="form-group">
                                <select name="estado" id="inputState" class="form-control">
                                    <option selected><Em>Perfecto</Em></option>
                                    <option>Daño menor</option>
                                    <option>Reparación urgente</option>
                                    <option>En reparación</option>
                                    <option>Descarte</option>
                                </select>
                            </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                            </div>
                            <div class="form-group">
                                <a href="/links" type="button" class="btn btn-danger btn-block">
                                    Cancel
                                </a>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>